<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >

    <TextView
        android:id="@+id/start_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:textSize="25sp"
        android:text="08:00"
        app:layout_constraintBottom_toTopOf="@id/end_time"
        app:layout_constraintEnd_toStartOf="@id/lesson_name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/end_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@id/start_time"
        app:layout_constraintTop_toBottomOf="@id/start_time"
        android:text="09:30"
        android:textSize="25sp"
         />

    <TextView
        android:id="@+id/lesson_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        app:layout_constraintStart_toEndOf="@id/start_time"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Catologic =^._.^="
        android:textSize="30sp"
         />

    <TextView
        android:id="@+id/number_class"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/lesson_name"
        app:layout_constraintTop_toBottomOf="@id/lesson_name"
        tools:text="Class: 132"
        android:textSize="25sp"
        />

    <TextView
        android:id="@+id/lesson_professor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/lesson_name"
        app:layout_constraintTop_toBottomOf="@id/number_class"
        tools:text="Professor: Mr. Cat"
        android:textSize="20sp"
         />


</androidx.constraintlayout.widget.ConstraintLayout>